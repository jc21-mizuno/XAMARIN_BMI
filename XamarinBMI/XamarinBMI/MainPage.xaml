<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:XamarinBMI"
             x:Class="XamarinBMI.MainPage">

    <StackLayout Padding="100,150">
        
        <Entry Placeholder="身長[m]または[cm]　例：1.75 または 175.0"
               x:Name="EntryHeight"/>

        <Entry Placeholder="体重[kg]　整数のみ　例：58"
               x:Name="EntryWeight"/>

        <Button Text="BMI計算(このページ)"
                HorizontalOptions="Center"
                x:Name="ButtonBMI"/>

        <Label Text="ここに結果が出ます"
               HorizontalOptions="Center"
               x:Name="LabelResult"/>

        <Button Text="BMI計算(別ページ)"
                HorizontalOptions="Center"
                x:Name="ButtonBMI2"/>
        
    </StackLayout>

</ContentPage>
